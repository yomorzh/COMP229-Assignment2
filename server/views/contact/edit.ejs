<% include ../partials/header.ejs %>

<% include ../partials/main_nav.ejs %>
<!--Content for html-->
<div class="container">
    <div class="offset-md-2 col-md-6">
        <h1><%= title %></h1>
        <form class ="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Contact's name</label>
                <input type="text" class="form-control" 
                id = "nameTestField" 
                placeholder="Enter the name of contact"
                name = "name" 
                value = "<%= contact.name %>" 
                required>
            </div>
            <div class="form-group">
                <label for="phoneNumberTextField">Phone Number</label>
                <input type="text" class="form-control" 
                id = "phoneNumberTestField" 
                placeholder="Enter phone number of a contactr"
                name = "phoneNumber" 
                value = "<%= contact.phoneNumber %>" 
                required>
            </div>
            <div class="form-group">
                <label for="emailTextField">Email</label>
                <input type="text" class="form-control" 
                id = "emailTestField" 
                placeholder="Enter email of a contact"
                name = "email"
                value = "<%= contact.email %>" 
                required>
            </div>
            <button class="btn btn-primary" type = "submit">
                <i class="fas fa-edit"></i> Submit</button>
                <a href="/contact-list" class="btn btn-warning fas fa-undo">Cancel</a>
        </form>
    </div>
</div>

